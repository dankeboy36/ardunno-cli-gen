{
  "name": "ardunno-cli-gen",
  "version": "0.1.0-beta.8",
  "description": "Generates nice-grpc API for the Arduino CLI",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./generate": "./dist/generate.js"
  },
  "files": [
    "dist",
    "!/**/__tests__"
  ],
  "bin": {
    "ardunno-cli": "./dist/cli.js"
  },
  "keywords": [
    "arduino",
    "arduino-cli",
    "proto",
    "grpc",
    "nice-grpc"
  ],
  "author": "dankeboy36",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dankeboy36/ardunno-cli-gen/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dankeboy36/ardunno-cli-gen.git"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -p ./ -w",
    "test": "mocha",
    "format": "prettier --write .",
    "lint": "eslint ./src --ext ts",
    "prepublishOnly": "npm run test && npm run compile && npm run lint && npm run format"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "debug": "^4.3.4",
    "execa": "^5.1.1",
    "globby": "^11.1.0",
    "is-valid-path": "^0.1.1",
    "nice-grpc-common": "^2.0.0",
    "protobufjs": "^7.1.1",
    "protoc": "^1.1.3",
    "rimraf": "^3.0.2",
    "semver": "^7.3.8",
    "tmp-promise": "^3.0.3",
    "ts-proto": "^1.125.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/is-valid-path": "^0.1.0",
    "@types/mocha": "^10.0.0",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-json-schema-generator": "^1.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
